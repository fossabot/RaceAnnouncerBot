  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.0.0"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "ttsc",
    "start": "node dist/src/index.js",
    "dev": "export $(cat .env | sed '/^#/d' | xargs) && tsc-watch --build --incremental --noClear --compiler ttypescript/bin/tsc --onSuccess \"node ./dist/src/index.js\"",
    "format": "prettier --write \"{src,test}/**/*.ts\" ",
    "lint": "eslint --fix \"{test,src}/**/*.{js,ts}\"",
    "test": "export $(cat .env | sed '/^#/d' | xargs) && jest --verbose --runInBand --coverage",
    "migration:generate": "bash ./scripts/generate-migration.sh"
  },
  "dependencies": {
    "@elastic/ecs-pino-format": "^1.2.0",
    "@types/uuid": "^8.3.1",
    "axios": "^0.21.1",
    "cron": "^1.8.2",
    "discord.js": "^13.1.0",
    "joi": "^17.4.2",
    "lock": "^1.1.0",
    "moment": "^2.29.1",
    "mysql2": "^2.3.0",
    "pino": "^6.13.0",
    "pino-elasticsearch": "^6.1.0",
    "pino-multi-stream": "^5.3.0",
    "pino-pretty": "^5.1.3",
    "redis": "^3.1.2",
    "tsc-watch": "^4.4.0",
    "typeorm": "^0.2.37",
    "uuid": "^8.3.2",
    "wtfnode": "^0.9.1"
  },
  "devDependencies": {
    "@types/cron": "^1.7.3",
    "@types/jest": "^27.0.1",
    "@types/node": "16.6.1",
    "@types/pino": "^6.3.11",
    "@types/redis": "^2.8.31",
    "@types/stoppable": "^1.1.1",
    "@types/ts-nameof": "^4.2.1",
    "@types/wtfnode": "^0.7.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "eslint-plugin-unused-imports": "^1.1.3",
    "prettier": "^2.3.2",
